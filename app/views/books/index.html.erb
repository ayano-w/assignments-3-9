

 <body>
   <h1 class="index-page-title">Books</h1>
  <table>
    <thead>
      <tr>
        <th class="thead-title">Title</th>
        <th class="thead-body">Body</th>
        <th class="thead-link" colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book) %></td>
        <td><%= link_to "Edit", edit_book_path(book) %></td>
        <td><%= link_to "Destroy", book_path(book), method: :delete %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  
  <h2 class="new">New Book</h2>
  

    <% if @book.errors.any? %>
    <div class="errors-explanation">
    <h2 class="errors-title"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
      <ul type="sqare">
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
      </div>
    <% end %>
  

  <%= form_with model:@book, local:true do |f| %>
  
    <div class="new-field">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    
    <div class="new-field">
      <h4>Body</h4>
      <%= f.text_area :body %>
    </div>
    
    <div class="new-field">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
    

</body>  


  