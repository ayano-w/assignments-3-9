<body class="edit-page">
  <h1 class="edit-title">Editing Book</h1>
  
  
  
    <% if @book.errors.any? %>
  <div class="errors-explanation">
  <h2 class="errors-title"><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
    <ul type="sqare">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>
  
  
  
  <%=form_with model:@book, local:true do |f| %>
  
  <div class="edit-field">
    <h4>Title</h4>
    <%= f.text_field :title %>
  </div>
    
  <div class="edit-field">
    <h4>Body</h4>
    <%= f.text_area :body %>
  </div>
  
  <div class="edit-field">
    <%= f.submit ' Update Book ' %>
  </div>
  
    <% end %>
    
    <%= link_to "Show", book_path(@book.id) %> |
    <%= link_to "Back", books_path %>

</body>